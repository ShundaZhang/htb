#!/bin/sh

chown 0:0 -R /
chown 1000 /home/user
chmod 400 /flag

mount -t proc none /proc
mount -t sysfs none /sys
mount -t devtmpfs none /dev
mount -t tmpfs tmpfs /tmp

sleep 1

insmod /knote.ko
chmod 744 /dev/knote
dmesg -n 1
chmod -R 777 /tmp/

cd /home/user
cttyhack su -s /bin/sh user
poweroff -f
